<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Controller">
    <top>
        <Label style="-fx-font-size: 24px; -fx-font-family: Arial; -fx-padding: 20px; -fx-alignment: center;" text="Supermarket queue simulator" BorderPane.alignment="CENTER" />
    </top>
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="383.0" prefWidth="170.0" style="-fx-padding: 10px; -fx-font-family: Arial; -fx-font-size: 14px; -fx-margin: 10px;">
            <children>
                <Label style="-fx-font-size: 16px; -fx-font-family: Arial;" text="Input: " />
                <VBox prefHeight="48.0" prefWidth="150.0">
                    <children>
                        <Label prefHeight="17.0" prefWidth="130.0" text="Add a cashier" />
                        <Slider fx:id="cashierSlider" majorTickUnit="1" max="10" min="1" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="1" />
                    </children>
                </VBox>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Label prefHeight="19.0" prefWidth="132.0" text="Add a self-service desk" />
                        <Slider fx:id="selfServiceSlider" majorTickUnit="1" max="10" min="1" prefHeight="22.0" prefWidth="150.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="1" />
                      <VBox prefHeight="200.0" prefWidth="100.0">
                          <children>
                              <Label prefHeight="33.0" prefWidth="134.0" text="Number of customers" />
                              <Slider fx:id="numOfCustomersSlider" majorTickUnit="1000" max="10000" min="1000" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="1000" />
                        <VBox prefHeight="71.0" prefWidth="150.0">
                           <children>
                              <Label text="Probability Distributions:" />
                              <ComboBox fx:id="distributionComboBox" prefWidth="150.0" />
                           </children>
                        </VBox>
                          </children>
                      </VBox>
                    </children>
                </VBox>
            <VBox prefHeight="86.0" prefWidth="150.0">
               <children>
                  <Label text="Simulation Time (h):" />
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                         <ComboBox fx:id="simulationTimeComboBox" prefWidth="150.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox prefHeight="32.0" prefWidth="150.0">
               <children>
                  <HBox prefHeight="33.0" prefWidth="150.0">
                     <children>
                        <Label fx:id="meanLabel" prefHeight="16.0" prefWidth="87.0" text="Mean" />
                        <ComboBox fx:id="meanValueComboBox" prefHeight="26.0" prefWidth="85.0" />
                     </children>
                  </HBox>
                  <HBox prefHeight="33.0" prefWidth="150.0">
                     <children>
                         <Label fx:id="varianceLabel" prefHeight="16.0" prefWidth="106.0" text="Variance" />
                        <ComboBox fx:id="varianceValueComboBox" prefHeight="26.0" prefWidth="105.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>

            </children>
        </VBox>
    </left>
    <center>
        <VBox prefHeight="471.0" prefWidth="730.0">
            <HBox style="-fx-margin: 10px;">
                <Label style="-fx-font-size: 14px; -fx-font-family: Arial;" text="Visualisation:" />
                <Pane HBox.hgrow="ALWAYS" /> <!-- Spacer -->
                <Button onMouseClicked="#start" style="-fx-font-family: Arial;" text="▶" /> <!-- Fast Forward -->
                <Button style="-fx-font-family: Arial;" text="⏩" /> <!-- Very Fast Forward -->
                <Button style="-fx-font-family: Arial;" text="■" /> <!-- Stop -->
            </HBox>
            <StackPane prefHeight="352.0" prefWidth="600.0" style="-fx-padding: 10px; -fx-border-color: black; -fx-border-width: 2px;"> <!-- Your simulation container -->
                <!-- Simulation content goes here -->
                <HBox alignment="BOTTOM_CENTER" spacing="10">
                    <HBox fx:id="cashierContainer" alignment="BOTTOM_CENTER" minWidth="600" spacing="10">
                    <!-- Cashier images will be added here dynamically based on slider value -->
                    </HBox>
                </HBox>
            </StackPane>
            <Accordion fx:id="accordion" VBox.vgrow="ALWAYS">
                <panes>
                    <TitledPane expanded="true" text="Logs">
                        <content>
                            <ScrollPane fx:id="logScrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
                                <content>
                                    <TextFlow fx:id="logTextFlow" prefHeight="200" prefWidth="300" />
                                </content>
                            </ScrollPane>
                        </content>
                    </TitledPane>
                </panes>
            </Accordion>
        </VBox>
    </center>
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Output:" />
         </children>
      </VBox>
   </right>
</BorderPane>
