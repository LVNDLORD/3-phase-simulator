<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Controller">
    <top>
        <Label style="-fx-font-size: 24px; -fx-font-family: Arial; -fx-padding: 20px; -fx-alignment: center;" text="Supermarket queue simulator" BorderPane.alignment="CENTER" />
    </top>
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="383.0" prefWidth="170.0" style="-fx-padding: 10px; -fx-font-family: Arial; -fx-font-size: 14px; -fx-margin: 10px;">
            <children>
                <Label style="-fx-font-size: 16px; -fx-font-family: Arial;" text="Input: " />
                <VBox prefHeight="48.0" prefWidth="150.0">
                    <children>
                        <Label prefHeight="17.0" prefWidth="130.0" text="Add a cashier" />
                        <Slider fx:id="cashierSlider" majorTickUnit="1" max="10" min="1" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="1" />
                    </children>
                </VBox>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Label prefHeight="19.0" prefWidth="132.0" text="Add a self-service desk" />
                        <Slider fx:id="selfServiceSlider" majorTickUnit="1" max="10" min="1" prefHeight="22.0" prefWidth="150.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="1" />
                    </children>
                </VBox>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Label prefHeight="33.0" prefWidth="134.0" text="Number of customers" />
                        <Slider fx:id="numOfCustomersSlider" majorTickUnit="1000" max="10000" min="1000" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="1000" />
                    </children>
                </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Probability Distributions:" />
                  <ComboBox fx:id="distributionComboBox" prefWidth="150.0" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Simulation Time (h):" />
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                         <ComboBox fx:id="simulationTimeComboBox" prefWidth="150.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>

            </children>
        </VBox>
    </left>
    <center>
        <VBox>
            <HBox style="-fx-margin: 10px;">
                <Label style="-fx-font-size: 14px; -fx-font-family: Arial;" text="Visualisation:" />
                <Pane HBox.hgrow="ALWAYS" /> <!-- Spacer -->
                <Button onMouseClicked="#start" style="-fx-font-family: Arial;" text="▶" /> <!-- Fast Forward -->
                <Button style="-fx-font-family: Arial;" text="⏩" /> <!-- Very Fast Forward -->
                <Button style="-fx-font-family: Arial;" text="■" /> <!-- Stop -->
            </HBox>
            <StackPane prefHeight="352.0" prefWidth="600.0" style="-fx-padding: 10px; -fx-border-color: black; -fx-border-width: 2px;"> <!-- Your simulation container -->
                <!-- Simulation content goes here -->
                <HBox alignment="BOTTOM_CENTER" spacing="10">
                    <HBox fx:id="cashierContainer" alignment="BOTTOM_CENTER" spacing="10" minWidth="600">
                    <!-- Cashier images will be added here dynamically based on slider value -->
                    </HBox>
                </HBox>
            </StackPane>
            <Accordion VBox.vgrow="ALWAYS">
                <panes>
                <TitledPane text="Logs">
                    <content>
                        <TextArea fx:id="logTextArea" editable="false" prefHeight="200" prefWidth="300" wrapText="true" />
                    </content>
                </TitledPane>
                </panes>
            </Accordion>
        </VBox>
    </center>
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Output:" />
         </children>
      </VBox>
   </right>
</BorderPane>
